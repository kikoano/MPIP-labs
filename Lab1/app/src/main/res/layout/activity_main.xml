<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kikoano111.lab1.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explicit Activity"
        android:id="@+id/ExplicitActivityButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:onClick="startEA" />

    <TextView
        android:id="@+id/ExplicitATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ExplicitActivityButton"
        android:layout_alignBottom="@+id/ExplicitActivityButton"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/ExplicitActivityButton"
        android:layout_toRightOf="@+id/ExplicitActivityButton"
        android:gravity="center"
        android:text="Awaiting Text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Implicit Activity"
        android:id="@+id/implicitActivityButton"
        android:layout_below="@+id/ExplicitActivityButton"
        android:layout_alignRight="@+id/ExplicitActivityButton"
        android:layout_alignEnd="@+id/ExplicitActivityButton"
        android:layout_marginTop="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="startIA" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendButton"
        android:layout_below="@+id/implicitActivityButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_alignRight="@+id/implicitActivityButton"
        android:layout_alignEnd="@+id/implicitActivityButton"
        android:onClick="sendAction" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:id="@+id/selectImageButton"
        android:layout_below="@+id/sendButton"
        android:layout_alignRight="@+id/sendButton"
        android:layout_alignEnd="@+id/sendButton"
        android:layout_marginTop="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="selectImage" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/selectImageButton"
        android:layout_alignRight="@+id/selectImageButton"
        android:layout_below="@+id/selectImageButton"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="17dp"
        android:background="#000000" />

</RelativeLayout>
